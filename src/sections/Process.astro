---
import content from "../lib/content";
---

<section
  class="text-white bg-neutral-700 flex flex-col gap-10 items-center py-20 px-5 lg:px-16 lg:py-24 hover:bg-neutral-800 transition"
>
  <h1
    data-aos="fade-down"
    class="text-5xl lg:text-7xl uppercase font-bold text-center"
  >
    Proceso de trabajo
  </h1>
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-5 xl:gap-10 max-w-7xl m-auto">
    {
      content.process.map((p) => (
        <div
          data-aos="zoom-in"
          class="flex items-center gap-5 border border-b-white/20 py-10 lg:px-5 px-2 border-transparent hover:border-white/20 transition hover:bg-neutral-700"
        >
          <span />
          <div class="flex flex-col gap-1">
            <h1 class="text-2xl font-medium text-orange">{p.title}</h1>
            <p>{p.description}</p>
          </div>
        </div>
      ))
    }
  </div>
</section>
